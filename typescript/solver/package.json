{
  "name": "solver",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "solver": "node ./dist/index.js",
    "build": "tsc && copyfiles ./solvers/**/*.yaml ./dist",
    "dev": "tsx --watch ./index.ts",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "contracts:typegen": "typechain --node16-modules --target ethers-v5 --out-dir typechain **/contracts/*.json",
    "postinstall": "yarn contracts:typegen",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BootNodeDev/intents-framework/typescript/solver"
  },
  "author": "bootnode.dev",
  "license": "Apache-2.0",
  "description": "",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typechain/ethers-v5": "^11.1.2",
    "@types/copyfiles": "^2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@hyperlane-xyz/registry": "^4.10.0",
    "@hyperlane-xyz/sdk": "^5.5.0",
    "@hyperlane-xyz/utils": "^5.6.0",
    "chalk": "^5.3.0",
    "dotenv-flow": "^4.1.0",
    "ethers": "^5.7.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uniqolor": "^1.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.\\.?\\/.+)\\.js$": "$1"
    }
  }
}
